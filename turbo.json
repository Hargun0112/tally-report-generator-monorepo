{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "MONGO_PASSWORD",
    "MONGO_USERNAME",
    "MONGO_DB_NAME",
    "PORT",
    "SESSION_SECRET",
    "NODE_ENV",
    "PG_HOST",
    "PG_PORT",
    "PG_PASSWORD",
    "PG_USER",
    "PG_DATABASE"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dotEnv": [".env"],
      "cache": false,
      "persistent": true
    }
  }
}
