{
  "name": "fullstack-monorepo-template",
  "private": true,
  "scripts": {
    "build": "turbo build --concurrency=13",
    "dev": "turbo dev --concurrency=13",
    "lint": "turbo lint --concurrency=13",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rm -rf **/dist **/.turbo **/node_modules",
    "clean-install": "npm run clean && npm run install"
  },
  "devDependencies": {
    "@trg_package/eslint-config": "*",
    "@trg_package/typescript-config": "*",
    "prettier": "^3.3.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "packageManager": "npm@8.19.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
