{
  "name": "@trg/monorepo",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo build --concurrency=13",
    "dev": "dotenv -- turbo dev --concurrency=13",
    "lint": "dotenv -- turbo lint --concurrency=13",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rimraf --glob **/dist **/.turbo **/node_modules **/package-lock.json"
  },
  "dependencies": {
    "dotenv-cli": "^7.4.2"
  },
  "devDependencies": {
    "@trg_package/config-eslint": "*",
    "@trg_package/config-typescript": "*",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "packageManager": "npm@8.19.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
